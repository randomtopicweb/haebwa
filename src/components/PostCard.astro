---
// src/components/PostCard.astro
const { post } = Astro.props;
const formattedDate = new Date(post.data.pubDate).toLocaleDateString('ko-KR', {
  year: 'numeric', month: 'long', day: 'numeric'
});
---
<article class="bg-surface rounded-2xl shadow-lg hover:shadow-2xl transition-all duration-300 overflow-hidden group">
  <a href={`/blog/${post.slug}`}>
    {post.data.heroImage && (
      <div class="overflow-hidden">
        <img 
          src={post.data.heroImage} 
          alt={post.data.title} 
          class="w-full h-56 object-cover group-hover:scale-105 transition-transform duration-500"
          transition:name={post.slug}
        />
      </div>
    )}
    <div class="p-8">
      <p class="text-secondary text-sm mb-2">{formattedDate}</p>
      <h2 class="text-2xl font-bold text-primary mb-3 line-clamp-2 group-hover:text-accent transition-colors">{post.data.title}</h2>
      <p class="text-secondary line-clamp-3 mb-4">{post.data.description}</p>
    </div>
  </a>
</article>