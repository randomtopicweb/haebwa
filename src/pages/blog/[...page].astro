---
// src/pages/blog/[...page].astro
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import PostCard from '../../components/PostCard.astro'; // <-- ProjectCard가 아닌 PostCard를 사용하도록 수정
import Pagination from '../../components/Pagination.astro';
import { BLOG_POSTS_PER_PAGE } from '../../consts';

export async function getStaticPaths({ paginate }) {
  const posts = (await getCollection('blog').catch(() => []) ?? [])
    .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf());
  
  if (posts.length === 0) {
    return [];
  }

  return paginate(posts, { pageSize: BLOG_POSTS_PER_PAGE });
}

const { page } = Astro.props;
---
<BaseLayout title="블로그">
  <div class="max-w-7xl mx-auto px-6 py-16">
    <h1 class="text-4xl font-bold text-center mb-12">블로그</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {page.data.map((post) => (<PostCard post={post} />))}
    </div>
    <Pagination page={page} />
  </div>
</BaseLayout>